{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://ciphora.com/schema/message.json",
  "title": "Message",
  "description": "Message sent from peer (relayed to another mostly)",
  "type": "object",
  "properties": {
    "type": {
      "description": "The type of the message",
      "type": "string",
      "enum": ["connect", "signal"]
    },
    "senderId": {
      "description": "The unique identifier of the sending peer (i.e. PGP fingerprint)",
      "type": "string"
    },
    "receiverId": {
      "description": "The unique identifier of the receiving peer (i.e. PGP fingerprint)",
      "type": "string"
    },
    "data": {
      "description": "Abritrary data payload",
      "type": "object"
    }
  },
  "oneOf": [{
      "properties": {
        "type": {
          "const": "connect"
        }
      },
      "required": ["type", "senderId"]
    },
    {
      "properties": {
        "type": {
          "const": "signal"
        }
      },
      "required": ["type", "senderId", "receiverId", "data"]
    }
  ]
}